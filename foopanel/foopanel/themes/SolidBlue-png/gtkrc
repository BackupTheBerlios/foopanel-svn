
#style "fix-librpng-engine-with-pixmap-engine"
#{ engine "pixmap" {} }

style "SolidBlue" {

    font_name = "Sans 8"
    
    fg[NORMAL] = "#fff"
    fg[PRELIGHT] = "#fff"
    fg[ACTIVE] = "#fff"
    fg[INSENSITIVE] = "#fff"
    
    text[NORMAL] = "#fff"
    text[PRELIGHT] = "#fff"
    text[ACTIVE] = "#fff"
    text[INSENSITIVE] = "#fff"
    
    bg[NORMAL] = "#416cbd"
    bg[PRELIGHT] = "#416cbd"
    bg[ACTIVE] = "#416cbd"
    bg[INSENSITIVE] = "#416cbd"
    
    base[NORMAL] = "#416cbd"
    base[PRELIGHT] = "#416cbd"
    base[ACTIVE] = "#416cbd"
    base[INSENSITIVE] = "#416cbd"
    
    
    engine "pixmap" {
    
        image {
            function = FLAT_BOX
            file = "background-popup.png"
            stretch = TRUE
            border = { 3, 3, 3, 3 }
        }
    
        image { 
            function = BOX
            file = "button-normal.png"
            border = { 2,2,2,2 }
            stretch = TRUE
            state = NORMAL
            recolorable = TRUE
        }
        
        image {
            function = BOX
            file = "button-prelight.png"
            border = { 2,2,2,2 }
            stretch = TRUE
            state = PRELIGHT
            recolorable = TRUE
        }
        
        image {
            function = BOX
            file = "button-active.png"
            border = { 2,2,2,2 }
            stretch = TRUE
            recolorable = TRUE
            state = ACTIVE
        }
        
        ## SEPARATORS
        image {
            function = VLINE
            file = "vseparator.png"
            border = { 1,0,0,0 }
            stretch = TRUE
        }
        
        image {
            function = HLINE
            file = "hseparator.png"
            border = { 0,0,0,1 }
            stretch = TRUE
        }
        
    }
    

}
widget "Foopanel*" style "SolidBlue"


style "Panel" {
    engine "pixmap" {
        image {
            function = FLAT_BOX
            file = "panel-background.png"
            stretch = TRUE
        }
    }
}
widget "FoopanelWindow" style "Panel"

