            function        = BOX
            recolorable     = TRUE
        	file            = "spacer.png"
        	stretch         = TRUE   
        	state           = NORMAL
        }

        image {
            function        = BOX
            recolorable     = TRUE
        	file            = "edgebutton-prelight.png"
        	stretch         = TRUE   
        	state           = PRELIGHT
        }

        image {
            function        = BOX
            recolorable     = TRUE
        	file            = "edgebutton-active.png"
        	stretch         = TRUE   
        	state           = ACTIVE
        }

    }

}
widget "FoopanelWindow.*.EdgeButton" style "EdgeButton"

